---
import Layout from "../layouts/Layout.astro";
import Timeline from "../components/Timeline.astro";
import { getEntry } from "astro:content";
import ExecutiveSummary from "../components/ExecutiveSummary.astro";

const entry = await getEntry("pages", "about");
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
    <div class="container mx-auto px-6 py-20 relative">
        <!-- Abstract Background Orbs -->
        <div
            class="fixed top-20 left-10 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl -z-10 animate-pulse"
        >
        </div>
        <div
            class="fixed bottom-20 right-10 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl -z-10 animate-pulse delay-700"
        >
        </div>

        <article class="max-w-4xl mx-auto">
            <h1 class="text-5xl md:text-6xl font-extrabold mb-8 leading-tight">
                The Modern <span class="text-gradient">Architect</span>
            </h1>

            <div class="mb-12">
                <ExecutiveSummary />
            </div>

            <div class="prose prose-invert prose-lg max-w-none about-content">
                <Content />
            </div>

            <div class="mt-20">
                <Timeline />
            </div>
        </article>
    </div>
</Layout>
